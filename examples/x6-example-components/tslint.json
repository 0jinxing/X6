{
  "extends": ["tslint-react", "tslint-eslint-rules"],
  "linterOptions": {
    "exclude": ["node_modules/**"]
  },
  "rules": {
    "semicolon": [true, "never"],
    "no-construct": true,
    "no-debugger": true,
    "no-reference": true,
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": false,
    "quotemark": [true, "single", "jsx-double"]
  }
}
