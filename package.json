{
  "name": "@antv/x6",
  "version": "0.1.0",
  "description": "JavaScript diagramming library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "src/**/*.ts"
  ],
  "directories": {
    "lib": "lib/",
    "src": "src/"
  },
  "keywords": [
    "diagram",
    "flowchart",
    "uml",
    "graph",
    "editor",
    "svg"
  ],
  "scripts": {
    "clean": "rimraf ./lib",
    "lint": "tslint -c tslint.json -p tsconfig.lint.json --fix",
    "less": "lessc ./src/index.less ./lib/index.css",
    "build:images": "node ./scripts/make-images.js",
    "build:version": "node ./scripts/make-version.js",
    "build:watch": "tsc -w",
    "build": "yarn run build:images && yarn run build:version && yarn run less && tsc",
    "prebuild": "yarn run lint && yarn run clean",
    "test": "jest",
    "coveralls": "cat ./test/coverage/lcov.info | coveralls",
    "pretest": "rimraf ./test/coverage",
    "prepublish": "yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint -c tslint.json -p ./tsconfig.json --fix"
    ]
  },
  "author": {
    "name": "bubkoo",
    "email": "bubkoo.wy@gmail.com"
  },
  "contributors": [],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@types/mousetrap": "^1.6.3",
    "base64-img": "^1.0.4",
    "coveralls": "^3.0.6",
    "husky": "^3.0.3",
    "image-size": "^0.7.4",
    "jest": "^24.8.0",
    "less": "^3.10.3",
    "lint-staged": "^9.2.1",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "mousetrap": "^1.6.3"
  }
}
